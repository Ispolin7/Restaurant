@model Restaurant.Data.Entities.TableOrder

<section class="ftco-appointment" id="form">
    @*Секція форми*@
    <div class="overlay"></div>
    <div class="container-wrap">
        <div class="row no-gutters d-md-flex align-items-center">
            <div class="col-md-12 appointment ftco-animate">
                <h3 class="mb-3">Забронювати столик</h3>
                <form asp-controller="TableOrders" asp-action="Create" method="post" class="appointment-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control" placeholder="Ім'я" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group ml-md-4">
                            <input asp-for="LastName" class="form-control" placeholder="Призвище" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <div class="input-wrap">
                                <div class="icon"><span class="ion-md-calendar"></span></div>
                                <input asp-for="Date" type="text" class="form-control appointment_date" placeholder="Дата">
                                @*<input asp-for="Date" class="form-control appointment_date" placeholder="Дата">*@
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group ml-md-4">
                            <div class="input-wrap">
                                <div class="icon"><span class="ion-ios-clock"></span></div>
                                <input asp-for="Time" type="text" class="form-control appointment_time" placeholder="Час">
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group ml-md-4">
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Телефон">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <textarea asp-for="Message" name="" id="" cols="30" rows="2" class="form-control" placeholder="Побажання"></textarea>
                        </div>
                        <div class="form-group ml-md-4">
                            <input type="submit" value="Забронювати" class="btn btn-primary py-3 px-4">
                        </div>
                    </div>
                </form>
                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
            </div>
        </div>
    </div>
</section>